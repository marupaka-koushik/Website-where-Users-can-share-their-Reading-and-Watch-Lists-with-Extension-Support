{
  "name": "content-summarizer-backend",
  "version": "1.0.0",
  "description": "Backend API for Content Summarizer extension",
  "main": "server.js",
  "scripts": {
    "start": "pkill -f 'node.*server.js' 2>/dev/null || true && PORT=3001 node server.js",
    "dev": "pkill -f 'nodemon.*server.js' 2>/dev/null || true && PORT=3001 nodemon server.js",
    "dev:watch": "nodemon --watch server.js --watch routes --watch models --watch middleware server.js",
    "stop": "pkill -f 'node.*server.js' && pkill -f 'nodemon.*server.js'",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": ["content", "summarizer", "ai", "api"],
  "author": "",
  "license": "ISC",
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^8.0.3",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "axios": "^1.6.2",
    "helmet": "^7.1.0",
    "express-rate-limit": "^7.1.5",
    "joi": "^17.11.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.2"
  }
}
